{% extends "base.twig" %}

{% block content %}
	
	<div class="issue-banner">
		<div class="container">
			<div class="col-sm-8 col-sm-push-1">
				<p>{{theme_options.home_headline}}</p>
			</div>
		</div>
	</div>
	
	<!-- Main Content -->
  <div class="container">
		<div class="row">
			<div class="col-md-7">
				<h1 class="issues-archive-title">Issues Archive</h1>
				{% for post in issues %}
		    	{% include ['issue-content.twig'] %}
		  	{% endfor %}
			</div>
			<aside class="col-md-3">
		    {{sidebar}}
			</aside>
		</div>
	</div>

{% endblock %}